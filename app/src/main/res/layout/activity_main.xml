<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muhammadfaizanawan.speedometer.MainActivity">

    <TextView
        android:id="@+id/txtSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 km/hr"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSpeed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="168dp"
        android:text="Requesting Coordinates..."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtY"
        android:layout_alignLeft="@+id/txtY"
        android:layout_alignRight="@+id/txtY"
        android:layout_alignStart="@+id/txtY"
        android:layout_below="@+id/txtY"
        android:layout_marginTop="36dp"
        android:text="Requesting Coordinates..."
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAlt"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Requesting Altitude..."
        android:layout_below="@+id/txtSpeed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp" />


</RelativeLayout>
